    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        
        jTextField6.setText(getcname());
        setProduct(jComboBox1.getSelectedItem().toString());
        if (jComboBox1.getSelectedIndex() == 0) {
        setPrice(15d);
        }
        else if (jComboBox1.getSelectedIndex() == 1) {
        setPrice(12d);
        }
        else if (jComboBox1.getSelectedIndex() == 2) {
        setPrice(20d);
        }
        else if (jComboBox1.getSelectedIndex() == 3) {
        setPrice(25d);
        }
        else if (jComboBox1.getSelectedIndex() == 4) {
        setPrice(50d);
        }
        else {
        setPrice(0d);
        }
        String current = jTextArea1.getText();
        quantity = getval();
        subtotal = (getPrice() * getval());
        jTextArea1.setText(getProduct() + "\t" + getPrice() + "\t" + getval() + "\t" + subtotal + "\n" + current);
        setval(subtotal);
        setTotal();
        jTextField3.setText(getTotal().toString());
        cash = getvaluefromlabel();
        change = (cash - total);
        setval1(change);
       
120
        
    }                                        

    
    
    
    
    
